<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/ui">

        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:defaultValue="false"
            app:summary="@string/dark_mode_summary"
            app:title="@string/dark_mode" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="@string/help">

        <Preference
            app:key="feedback"
            app:summary="@string/feedback_summary"
            app:title="@string/send_feedback" />

    </PreferenceCategory>

</PreferenceScreen>